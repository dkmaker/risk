    "board-game",
    "dice-roller",
    "risk-game",
    "strategy-game"
  ],
  "author": {
    "name": "dkmaker",
    "url": "https://github.com/dkmaker"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/dkmaker/risk.git"
  },
  "bugs": {
    "url": "https://github.com/dkmaker/risk/issues"
  },
  "homepage": "https://github.com/dkmaker/risk#readme",
  "packageManager": "pnpm@10.12.3",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/preact": "^3.2.4",
    "jsdom": "^26.1.0",
    "typescript": "^5.8.3",
    "unocss": "^66.3.3",
    "vite": "5.4.19",
    "vite-plugin-pwa": "^1.0.1",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@preact/preset-vite": "^2.10.2",
