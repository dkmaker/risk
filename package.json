  "main": "index.js",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:analyze": "vite build --mode analyze",
    "build:pwa": "vite build --mode production",
    "preview": "vite preview",
    "preview:pwa": "vite preview --https",
    "test": "vitest",
    "test:run": "vitest run",
    "test:ui": "vitest --ui",
    "lint": "biome check .",
    "lint:fix": "biome check --apply .",
    "format": "biome format --write .",
    "typecheck": "tsc --noEmit",
    "pwa:generate": "pwa-assets-generator"
  },
  "keywords": [
    "risk",
    "dice",
    "battle",
    "game",
    "pwa",
    "mobile",
    "javascript",
